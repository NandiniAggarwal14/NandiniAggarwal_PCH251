#include<stdio.h>
void asc(int *,int);
int main()
{
int n,a[100],i,*p;
printf("\nEnter size: ");
scanf("%d",&n);
p=a;
printf("\nEnter array elements: ");
for(i=0;i<n;i++)
{
scanf("%d",(p+i));
}
asc(p,n);
printf("\nSorted array is\n");
for(i=0;i<n;i++)
printf("%d\n",a[i]);
return 0;
}
void asc(int *p,int n)
{ int i,j,tmp;
for(i=0;i<n-1;i++)
{
for(j=0;j<n-i-1;j++)
{
if(*(p+j)<*(p+j+1))
{
tmp=*(p+j);
*(p+j)=*(p+j+1);
*(p+j+1)=tmp;
}
}
}
}
